<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_Deneme2.Page1">
    <ContentPage.Content>
      
        <StackLayout>
            <Label x:Name="lblHata" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Entry x:Name="txtName" Placeholder="Kullanıcı Adı Girin" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Entry x:Name="txtSifre" Placeholder="Şifre" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            <Button x:Name="btnGir" Text="Giriş" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="btnGir_Clicked"  BackgroundColor="WhiteSmoke" BorderColor="Aqua" BorderWidth="1"/>
        </StackLayout>

        
    </ContentPage.Content>
</ContentPage>